<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:justifyContent="center"
    app:alignItems="center"
    android:paddingTop="80px"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/primary">

    <com.google.android.flexbox.FlexboxLayout
        app:flexDirection="column"
        android:backgroundTint="@color/white_gray"
        android:background="@drawable/border_radius_stroke_box"
        android:paddingLeft="80px"
        android:paddingRight="80px"
        android:paddingTop="70px"
        android:paddingBottom="70px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/hoster_textview"
            android:textSize="60px"
            android:textColor="@color/primary_dark_deep"
            android:layout_marginTop="30px"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Architecture Definition"
            />

        <TextView
            android:id="@+id/activity_header_textview"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24px"
            android:text="Host by User"/>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            app:alignItems="center">
            <ImageView
                android:layout_margin="10px"
                android:src="@drawable/exclamation_icon"
                android:layout_width="50px"
                android:layout_height="50px"/>
            <TextView
                android:id="@+id/activity_deadline_textview"
                android:textColor="@color/black"
                android:textSize="30px"
                android:text="Deadline in 14/11/2022"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16px"/>
            <TextView
                android:id="@+id/activity_deadline_textview"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </com.google.android.flexbox.FlexboxLayout>

        <TextView
            android:textColor="@color/primary_dark_deep"
            android:textSize="30px"
            android:textStyle="bold"
            android:text="Describe details: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"/>

        <TextView
            android:textColor="@color/gray"
            android:textSize="32px"
            android:text="This activity needs you to continue on moving on your life, try by heart in yourself and improve it, maybe quite hard for you but never give it up. Wanna cry? Just cry! After that please stand up and do everything with 200% power. Until the day that we will meet again, it could be not a good moment for both, but at least, you already tried whole your heart ... if destiny give us a chance or if not, we still be good memories of each other and that moment in future, you would be proud of other. Be strong my girl, my boy!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15px"/>

        <TextView
            android:textColor="@color/primary_dark_deep"
            android:textSize="30px"
            android:textStyle="bold"
            android:text="Current Responsibility: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"/>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:justifyContent="space_between"
            app:alignItems="center"
            android:layout_marginTop="15px">
            <ImageView
                android:layout_marginTop="16px"
                android:layout_width="90px"
                android:layout_height="90px"
                android:background="@drawable/avatar"/>
            <ImageView
                android:layout_marginTop="16px"
                android:layout_width="90px"
                android:layout_height="90px"
                android:background="@drawable/avatar"/>
            <ImageView
                android:layout_marginTop="16px"
                android:layout_width="90px"
                android:layout_height="90px"
                android:background="@drawable/avatar"/>
            <ImageView
                android:layout_marginTop="16px"
                android:layout_width="90px"
                android:layout_height="90px"
                android:background="@drawable/avatar"/>
            <ImageView
                android:layout_marginTop="16px"
                android:layout_width="90px"
                android:layout_height="90px"
                android:background="@drawable/avatar"/>
            <ImageView
                android:layout_marginTop="16px"
                android:layout_width="90px"
                android:layout_height="90px"
                android:background="@drawable/avatar"/>
        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@drawable/border"
            app:justifyContent="center"
            app:alignItems="center"
            android:layout_marginTop="40px">
            <TextView
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select file"
                android:gravity="right"
                android:layout_marginRight="50px"
                android:textSize="40px"/>
        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:justifyContent="center"
            app:alignItems="center"
            android:layout_gravity="right"
            android:layout_marginTop="60px">
            <ImageView
                android:layout_width="30px"
                android:layout_height="30px"
                android:background="@drawable/point_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="not finished"
                android:textSize="35px"
                android:textColor="@color/black"
                android:layout_marginLeft="32px"/>
        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:justifyContent="center"
            app:alignItems="center"
            android:layout_marginTop="40px">
            <ImageView
                android:layout_width="45px"
                android:layout_height="45px"
                android:background="@drawable/submit_icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate: 0%"
                android:textSize="35px"
                android:textColor="@color/black"
                android:layout_marginLeft="20px"/>
        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_marginTop="40px"
            android:layout_marginBottom="180px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:justifyContent="flex_end">
        <TextView
                android:layout_width="350px"
                android:layout_height="wrap_content"
                android:background="@drawable/submit_button"
                android:padding="25px"
                android:text="Submit"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="40px"/>
        </com.google.android.flexbox.FlexboxLayout>
    </com.google.android.flexbox.FlexboxLayout>
</com.google.android.flexbox.FlexboxLayout>